<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_yellow_gradient_soda"
    tools:context=".main_part.views.activities.EditPhotoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_photo_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/edit_photo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/turkish_sea" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/edit_photo_file_uploaded"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        app:layout_constraintBottom_toTopOf="@id/edit_photo_progress_bar"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_photo_top_layout"
        app:layout_constraintWidth_percent=".75" />

    <ProgressBar
        android:id="@+id/edit_photo_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        app:layout_constraintBottom_toTopOf="@id/edit_photo_bottom_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_photo_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/edit_photo_choose_file"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2.5sp"
            android:background="@drawable/button_blue_border"
            android:text="@string/choose_file"
            android:textColor="#195190"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/edit_photo_upload_file"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/edit_photo_upload_file"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2.5sp"
            android:background="@drawable/button_blue_border"
            android:text="@string/upload"
            android:textColor="#195190"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/edit_photo_choose_file"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>