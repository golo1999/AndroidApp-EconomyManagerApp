<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="activity"
            type="com.example.economy_manager.feature.editaccount.EditAccountActivity" />

        <variable
            name="fragmentManager"
            type="androidx.fragment.app.FragmentManager" />

        <variable
            name="viewModel"
            type="com.example.economy_manager.feature.editaccount.EditAccountViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/topLayout"
                    layout="@layout/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:activity="@{activity}"
                    app:backgroundColor="@{@color/quaternaryLight}"
                    app:titleColor="@{@color/primaryLight}"
                    app:titleText="@{@string/edit_account}" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photo"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_marginTop="20sp"
                    app:civ_border_width="10sp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/topLayout"
                    app:layout_constraintWidth_percent=".4"
                    tools:src="@drawable/ic_add_photo" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstNameFieldLayout"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/photo"
                    app:layout_constraintWidth_percent=".8">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstNameField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/first_name"
                        android:inputType="textPersonName"
                        android:text="@={viewModel.firstName}"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/lastNameField"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:inputType="textPersonName"
                    android:text="@={viewModel.lastName}"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/firstNameFieldLayout"
                    app:layout_constraintWidth_percent=".8"
                    tools:text="@string/last_name" />

                <EditText
                    android:id="@+id/phoneField"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:inputType="phone"
                    android:text="@={viewModel.phoneNumber}"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lastNameField"
                    app:layout_constraintWidth_percent=".8"
                    tools:text="@string/phone_number" />

                <EditText
                    android:id="@+id/websiteField"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:inputType="text"
                    android:text="@={viewModel.website}"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phoneField"
                    app:layout_constraintWidth_percent=".8"
                    tools:text="@string/website" />

                <Spinner
                    android:id="@+id/countrySpinner"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/websiteField"
                    app:layout_constraintWidth_percent=".8" />

                <Spinner
                    android:id="@+id/genderSpinner"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/countrySpinner"
                    app:layout_constraintWidth_percent=".8" />

                <TextView
                    android:id="@+id/birthDateText"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20sp"
                    android:drawablePadding="10sp"
                    android:onClick="@{() -> viewModel.onBirthDateTextClicked(fragmentManager)}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genderSpinner"
                    app:layout_constraintWidth_percent=".8"
                    tools:text="@string/birth_date" />

                <EditText
                    android:id="@+id/careerTitleField"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:inputType="text"
                    android:text="@={viewModel.careerTitle}"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birthDateText"
                    app:layout_constraintWidth_percent=".8"
                    tools:text="@string/career_title" />

                <Button
                    android:id="@+id/updateProfileButton"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20sp"
                    android:onClick="@{() -> viewModel.updateProfileHandler(activity)}"
                    android:padding="10sp"
                    android:stateListAnimator="@null"
                    android:text="@string/update_profile"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/careerTitleField"
                    app:layout_constraintWidth_percent=".8" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>