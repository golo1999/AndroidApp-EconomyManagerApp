<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ApplicationPart.ActivityMainScreen"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainScreenProgressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/mainScreenProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#A2A2A1">

        <ImageView
            android:id="@+id/mainEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/mainBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_balance"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/mainAccount"
            app:layout_constraintLeft_toRightOf="@id/mainEdit"/>

        <ImageView
            android:id="@+id/mainAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/mainBalance"
            app:layout_constraintRight_toLeftOf="@id/mainSettings"/>

        <ImageView
            android:id="@+id/mainSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/mainSignout"
            app:layout_constraintLeft_toRightOf="@id/mainAccount"/>

        <ImageView
            android:id="@+id/mainSignout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sign_out"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTopLayout"
        android:orientation="vertical"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/greetingLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent=".9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/mainScreenRemainingIncome"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#DA291C"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/greetingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/FirstColor"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toTopOf="@id/dateText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/greetingText"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/currentMoneyText"
                        android:textColor="@color/silver"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/currentMoneyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/dateText"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/lime"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/mainScreenRemainingIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/remaining_monthly_income"
                app:layout_constraintTop_toBottomOf="@id/greetingLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/scroll_container0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                app:layout_constraintWidth_percent=".9"/>

            <FrameLayout
                android:id="@+id/scroll_container0"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".9"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/mainScreenRemainingIncome"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/mainScreenMonthlyBalance"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/mainScreenMonthlyBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/monthly_balance"
                app:layout_constraintTop_toBottomOf="@id/scroll_container0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/scroll_container1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                app:layout_constraintWidth_percent=".9"/>

            <FrameLayout
                android:id="@+id/scroll_container1"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".9"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/mainScreenMonthlyBalance"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/mainScreenLastWeekSpent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/mainScreenLastWeekSpent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/last_week_expenses"
                app:layout_constraintTop_toBottomOf="@id/scroll_container1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/scroll_container2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                app:layout_constraintWidth_percent=".9"/>

            <FrameLayout
                android:id="@+id/scroll_container2"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".9"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/mainScreenLastWeekSpent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/mainScreenLastTenTransactions"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/mainScreenLastTenTransactions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/last_10_transactions"
                app:layout_constraintTop_toBottomOf="@id/scroll_container2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/scroll_container3"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                app:layout_constraintWidth_percent=".9"/>

            <FrameLayout
                android:id="@+id/scroll_container3"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".9"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/mainScreenLastTenTransactions"
                app:layout_constraintBottom_toTopOf="@id/mainScreenTopFiveExpenses"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/mainScreenTopFiveExpenses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/top_5_expenses"
                app:layout_constraintTop_toBottomOf="@id/scroll_container3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/scroll_container4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                app:layout_constraintWidth_percent=".9"/>

            <FrameLayout
                android:id="@+id/scroll_container4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintWidth_percent=".9"
                app:layout_constraintTop_toBottomOf="@id/mainScreenTopFiveExpenses"
                app:layout_constraintBottom_toTopOf="@+id/mainFABLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="20dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainFABLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scroll_container4"
                android:layout_marginBottom="20dp"
                android:clipChildren="false">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/fabSubtract"
                    android:backgroundTint="@color/white"
                    android:elevation="6dp"
                    app:elevation="0dp"
                    app:fabSize="normal"
                    app:maxImageSize="66dp"
                    android:src="@drawable/ic_add"
                    android:scaleType="fitCenter"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabSubtract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/fabAdd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:backgroundTint="@color/white"
                    android:elevation="6dp"
                    app:elevation="0dp"
                    app:fabSize="normal"
                    app:maxImageSize="66dp"
                    android:src="@drawable/ic_subtract"
                    android:scaleType="fitCenter"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>