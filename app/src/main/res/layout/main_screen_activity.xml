<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_screen_scene"
    tools:context=".main_part.views.activities.MainScreenActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_screen_progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/main_screen_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_screen_top_layout"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:background="#A2A2A1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/main_screen_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/main_screen_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_balance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_screen_account"
            app:layout_constraintStart_toEndOf="@id/main_screen_edit"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/main_screen_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_screen_settings"
            app:layout_constraintStart_toEndOf="@id/main_screen_balance"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/main_screen_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_screen_sign_out"
            app:layout_constraintStart_toEndOf="@id/main_screen_account"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/main_screen_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:src="@drawable/ic_sign_out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_screen_nested_scroll_view"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_screen_top_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_screen_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/main_screen_greeting_layout"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                app:cardBackgroundColor="#DA291C"
                app:cardCornerRadius="20sp"
                app:cardElevation="10sp"
                app:layout_constraintBottom_toTopOf="@id/main_screen_remaining_income_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".9">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/main_screen_greeting_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:textAlignment="center"
                        android:textColor="@color/FirstColor"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/main_screen_date_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/main_screen_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:textAlignment="center"
                        android:textColor="@color/silver"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/main_screen_current_money_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_screen_greeting_text" />

                    <TextView
                        android:id="@+id/main_screen_current_money_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:textAlignment="center"
                        android:textColor="@color/lime"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_screen_date_text" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/main_screen_remaining_income_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/remaining_monthly_income"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/fragment_show_savings_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_screen_greeting_layout"
                app:layout_constraintWidth_percent=".9" />

            <FrameLayout
                android:id="@+id/fragment_show_savings_container"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                app:layout_constraintBottom_toTopOf="@id/main_screen_monthly_balance_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_screen_remaining_income_text"
                app:layout_constraintWidth_percent=".9" />

            <TextView
                android:id="@+id/main_screen_monthly_balance_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/monthly_balance"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/fragment_budget_review_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_show_savings_container"
                app:layout_constraintWidth_percent=".9" />

            <FrameLayout
                android:id="@+id/fragment_budget_review_container"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                app:layout_constraintBottom_toTopOf="@id/main_screen_last_week_spent_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_screen_monthly_balance_text"
                app:layout_constraintWidth_percent=".9" />

            <TextView
                android:id="@+id/main_screen_last_week_spent_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/last_week_expenses"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/fragment_money_spent_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_budget_review_container"
                app:layout_constraintWidth_percent=".9" />

            <FrameLayout
                android:id="@+id/fragment_money_spent_container"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                app:layout_constraintBottom_toTopOf="@id/main_screen_last_ten_transactions_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_screen_last_week_spent_text"
                app:layout_constraintWidth_percent=".9" />

            <TextView
                android:id="@+id/main_screen_last_ten_transactions_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/last_10_transactions"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/fragment_last_ten_transactions_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_money_spent_container"
                app:layout_constraintWidth_percent=".9" />

            <FrameLayout
                android:id="@+id/fragment_last_ten_transactions_container"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                app:layout_constraintBottom_toTopOf="@id/main_screen_top_five_expenses_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_screen_last_ten_transactions_text"
                app:layout_constraintWidth_percent=".9" />

            <TextView
                android:id="@+id/main_screen_top_five_expenses_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/top_5_expenses"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/fragment_top_five_expenses_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_last_ten_transactions_container"
                app:layout_constraintWidth_percent=".9" />

            <FrameLayout
                android:id="@+id/fragment_top_five_expenses_container"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                app:layout_constraintBottom_toTopOf="@+id/main_screen_money_spent_percentage_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_screen_top_five_expenses_text"
                app:layout_constraintWidth_percent=".9" />

            <TextView
                android:id="@+id/main_screen_money_spent_percentage_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/expenses_chart"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/fragment_money_spent_percentage_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_top_five_expenses_container"
                app:layout_constraintWidth_percent=".9" />

            <FrameLayout
                android:id="@+id/fragment_money_spent_percentage_container"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                app:layout_constraintBottom_toTopOf="@+id/main_screen_fab_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_screen_money_spent_percentage_text"
                app:layout_constraintWidth_percent=".9" />

            <!--            <FrameLayout-->
            <!--                android:id="@+id/fragment_money_spent_percentage_container"-->
            <!--                android:layout_width="0sp"-->
            <!--                android:layout_height="0sp"-->
            <!--                android:layout_marginTop="10sp"-->
            <!--                android:layout_marginBottom="20sp"-->
            <!--                app:layout_constraintBottom_toTopOf="@+id/mainFABLayout"-->
            <!--                app:layout_constraintHeight_percent=".2"-->
            <!--                app:layout_constraintLeft_toLeftOf="parent"-->
            <!--                app:layout_constraintRight_toRightOf="parent"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/mainScreenMoneySpentPercentage"-->
            <!--                app:layout_constraintWidth_percent=".9" />-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_screen_fab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:clipChildren="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_money_spent_percentage_container">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/main_screen_fab_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:elevation="6sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_add"
                    app:elevation="0sp"
                    app:fabSize="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/main_screen_fab_subtract"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxImageSize="66sp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/main_screen_fab_subtract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:elevation="6sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_subtract"
                    app:elevation="0sp"
                    app:fabSize="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/main_screen_fab_add"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxImageSize="66sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.motion.widget.MotionLayout>