<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="activity"
            type="com.example.economy_manager.feature.mainscreen.MainScreenActivity" />

        <variable
            name="addExpenseActivity"
            type="Class&lt;com.example.economy_manager.feature.addexpense.AddExpenseActivity>" />

        <variable
            name="addIncomeActivity"
            type="Class&lt;com.example.economy_manager.feature.addincome.AddIncomeActivity>" />

        <variable
            name="editAccountActivity"
            type="Class&lt;com.example.economy_manager.feature.editaccount.EditAccountActivity>" />

        <variable
            name="editTransactionsActivity"
            type="Class&lt;com.example.economy_manager.feature.edittransactions.EditTransactionsActivity>" />

        <variable
            name="monthlyBalanceActivity"
            type="Class&lt;com.example.economy_manager.feature.monthlybalance.MonthlyBalanceActivity>" />

        <variable
            name="settingsActivity"
            type="Class&lt;com.example.economy_manager.feature.settings.SettingsActivity>" />

        <variable
            name="viewModel"
            type="com.example.economy_manager.feature.mainscreen.MainScreenViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_screen_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/activity_main_screen_scene"
        tools:context=".feature.mainscreen.MainScreenActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firebaseLoadingProgressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/firebaseLoadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_screen_top_layout"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:background="#A2A2A1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/editTransactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:onClick="@{() -> viewModel.goToActivity(activity, editTransactionsActivity)}"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/monthlyBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.goToActivity(activity, monthlyBalanceActivity)}"
                android:src="@drawable/ic_balance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/editAccount"
                app:layout_constraintStart_toEndOf="@id/editTransactions"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/editAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.goToActivity(activity, editAccountActivity)}"
                android:src="@drawable/ic_account"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/settings"
                app:layout_constraintStart_toEndOf="@id/monthlyBalance"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.goToActivity(activity, settingsActivity)}"
                android:src="@drawable/ic_settings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/signOut"
                app:layout_constraintStart_toEndOf="@id/editAccount"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/signOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:onClick="@{() -> viewModel.logout(activity)}"
                android:src="@drawable/ic_sign_out"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/main_screen_nested_scroll_view"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_screen_top_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_screen_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/main_screen_greeting_layout"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="10sp"
                    app:cardBackgroundColor="#DA291C"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="10sp"
                    app:layout_constraintBottom_toTopOf="@id/remainingMonthlyIncomeText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".9">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/greetingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5sp"
                            android:textAlignment="center"
                            android:textColor="@color/FirstColor"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/dateText"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/dateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:textAlignment="center"
                            android:textColor="@color/silver"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/moneySpentPercentageText"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/greetingText" />

                        <TextView
                            android:id="@+id/moneySpentPercentageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:textAlignment="center"
                            android:textColor="@color/lime"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/dateText" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/remainingMonthlyIncomeText"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="@string/remaining_monthly_income"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/fragment_show_savings_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/main_screen_greeting_layout"
                    app:layout_constraintWidth_percent=".9" />

                <FrameLayout
                    android:id="@+id/fragment_show_savings_container"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@id/monthlyBalanceText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/remainingMonthlyIncomeText"
                    app:layout_constraintWidth_percent=".9" />

                <TextView
                    android:id="@+id/monthlyBalanceText"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly_balance"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/fragment_budget_review_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_show_savings_container"
                    app:layout_constraintWidth_percent=".9" />

                <FrameLayout
                    android:id="@+id/fragment_budget_review_container"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@id/lastWeekExpensesText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/monthlyBalanceText"
                    app:layout_constraintWidth_percent=".9" />

                <TextView
                    android:id="@+id/lastWeekExpensesText"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="@string/last_week_expenses"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/fragment_money_spent_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_budget_review_container"
                    app:layout_constraintWidth_percent=".9" />

                <FrameLayout
                    android:id="@+id/fragment_money_spent_container"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@id/lastTenTransactionsText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lastWeekExpensesText"
                    app:layout_constraintWidth_percent=".9" />

                <TextView
                    android:id="@+id/lastTenTransactionsText"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="@string/last_10_transactions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/fragment_last_ten_transactions_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_money_spent_container"
                    app:layout_constraintWidth_percent=".9" />

                <FrameLayout
                    android:id="@+id/fragment_last_ten_transactions_container"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@id/topFiveExpensesText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lastTenTransactionsText"
                    app:layout_constraintWidth_percent=".9" />

                <TextView
                    android:id="@+id/topFiveExpensesText"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="@string/top_5_expenses"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/fragment_top_five_expenses_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_last_ten_transactions_container"
                    app:layout_constraintWidth_percent=".9" />

                <FrameLayout
                    android:id="@+id/fragment_top_five_expenses_container"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/favoriteExpensesCategoryText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/topFiveExpensesText"
                    app:layout_constraintWidth_percent=".9" />

                <TextView
                    android:id="@+id/favoriteExpensesCategoryText"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Favorite expenses"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/favoriteExpensesCategoryContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragment_top_five_expenses_container"
                    app:layout_constraintWidth_percent=".9" />

                <FrameLayout
                    android:id="@+id/favoriteExpensesCategoryContainer"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    app:layout_constraintBottom_toTopOf="@id/expensesChartText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/favoriteExpensesCategoryText"
                    app:layout_constraintWidth_percent=".9" />

                <TextView
                    android:id="@+id/expensesChartText"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="@string/expenses_chart"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/expensesChartContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/favoriteExpensesCategoryContainer"
                    app:layout_constraintWidth_percent=".9" />

                <FrameLayout
                    android:id="@+id/expensesChartContainer"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/main_screen_fab_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/expensesChartText"
                    app:layout_constraintWidth_percent=".9" />

                <!--            <FrameLayout-->
                <!--                android:id="@+id/fragment_money_spent_percentage_container"-->
                <!--                android:layout_width="0sp"-->
                <!--                android:layout_height="0sp"-->
                <!--                android:layout_marginTop="10sp"-->
                <!--                android:layout_marginBottom="20sp"-->
                <!--                app:layout_constraintBottom_toTopOf="@+id/mainFABLayout"-->
                <!--                app:layout_constraintHeight_percent=".2"-->
                <!--                app:layout_constraintLeft_toLeftOf="parent"-->
                <!--                app:layout_constraintRight_toRightOf="parent"-->
                <!--                app:layout_constraintTop_toBottomOf="@id/mainScreenMoneySpentPercentage"-->
                <!--                app:layout_constraintWidth_percent=".9" />-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_screen_fab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:clipChildren="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/expensesChartContainer">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/addIncomeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:elevation="6sp"
                        android:onClick="@{() -> viewModel.goToActivity(activity, addIncomeActivity)}"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_add"
                        app:elevation="0sp"
                        app:fabSize="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/addExpenseButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:maxImageSize="66sp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/addExpenseButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:elevation="6sp"
                        android:onClick="@{() -> viewModel.goToActivity(activity, addExpenseActivity)}"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_subtract"
                        app:elevation="0sp"
                        app:fabSize="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/addIncomeButton"
                        app:layout_constraintTop_toTopOf="parent"
                        app:maxImageSize="66sp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>