<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.economy_manager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_new_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <activity
            android:name="com.example.economy_manager.main_part.views.activities.SettingsActivity"
            android:parentActivityName="com.example.economy_manager.main_part.views.activities.MainScreenActivity" />

        <activity android:name="com.example.economy_manager.main_part.views.activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.economy_manager.main_part.views.activities.EditSpecificTransactionActivity" />

        <activity
            android:name="com.example.economy_manager.main_part.views.activities.EditPhotoActivity"
            android:parentActivityName="com.example.economy_manager.main_part.views.activities.EditAccountActivity" />

        <activity
            android:name="com.example.economy_manager.main_part.views.activities.EditAccountActivity"
            android:parentActivityName="com.example.economy_manager.main_part.views.activities.MainScreenActivity" />

        <activity
            android:name="com.example.economy_manager.main_part.views.activities.MonthlyBalanceActivity"
            android:parentActivityName="com.example.economy_manager.main_part.views.activities.MainScreenActivity" />

        <activity
            android:name="com.example.economy_manager.main_part.views.activities.EditTransactionsActivity"
            android:parentActivityName="com.example.economy_manager.main_part.views.activities.MainScreenActivity" />

        <activity
            android:name="com.example.economy_manager.main_part.views.activities.SubtractMoneyActivity"
            android:parentActivityName="com.example.economy_manager.main_part.views.activities.MainScreenActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.example.economy_manager.main_part.views.activities.AddMoneyActivity"
            android:parentActivityName="com.example.economy_manager.main_part.views.activities.MainScreenActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.example.economy_manager.login_part.LogInActivity"
            android:parentActivityName="com.example.economy_manager.main_part.views.activities.SplashScreenActivity" />

        <activity
            android:name="com.example.economy_manager.login_part.ForgotPasswordActivity"
            android:parentActivityName="com.example.economy_manager.login_part.LogInActivity" />

        <activity
            android:name="com.example.economy_manager.login_part.SignUpActivity"
            android:parentActivityName="com.example.economy_manager.login_part.LogInActivity" />

        <activity android:name="com.example.economy_manager.main_part.views.activities.MainScreenActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

    </application>

</manifest>