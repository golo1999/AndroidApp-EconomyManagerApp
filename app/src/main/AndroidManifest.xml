<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.economy_manager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_new_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity
            android:name="com.example.economy_manager.main_part.view.activity.ActivitySettings"
            android:parentActivityName="com.example.economy_manager.main_part.view.activity.ActivityMainScreen" />
        <activity android:name="com.example.economy_manager.main_part.view.activity.ActivitySplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.economy_manager.main_part.view.activity.ActivityTimeAndDatePicker"
            android:parentActivityName="com.example.economy_manager.main_part.view.activity.ActivityEditSpecificTransaction" />
        <activity android:name="com.example.economy_manager.main_part.view.activity.ActivityEditSpecificTransaction" />
        <activity
            android:name="com.example.economy_manager.main_part.view.activity.ActivityEditPhoto"
            android:parentActivityName="com.example.economy_manager.main_part.view.activity.ActivityEditAccount" />
        <activity
            android:name="com.example.economy_manager.main_part.view.activity.ActivityEditAccount"
            android:parentActivityName="com.example.economy_manager.main_part.view.activity.ActivityMainScreen" />
        <activity
            android:name="com.example.economy_manager.main_part.view.activity.ActivityMonthlyBalance"
            android:parentActivityName="com.example.economy_manager.main_part.view.activity.ActivityMainScreen" />
        <activity
            android:name="com.example.economy_manager.main_part.view.activity.ActivityEditTransactions"
            android:parentActivityName="com.example.economy_manager.main_part.view.activity.ActivityMainScreen" />
        <activity
            android:name="com.example.economy_manager.main_part.view.activity.ActivitySubtractMoney"
            android:parentActivityName="com.example.economy_manager.main_part.view.activity.ActivityMainScreen"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.example.economy_manager.main_part.view.activity.ActivityAddMoney"
            android:parentActivityName="com.example.economy_manager.main_part.view.activity.ActivityMainScreen"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.example.economy_manager.login_part.ActivityLogIn"
            android:parentActivityName="com.example.economy_manager.main_part.view.activity.ActivitySplashScreen" />
        <activity
            android:name="com.example.economy_manager.login_part.ActivityForgotPassword"
            android:parentActivityName="com.example.economy_manager.login_part.ActivityLogIn" />
        <activity
            android:name="com.example.economy_manager.login_part.ActivitySignUp"
            android:parentActivityName="com.example.economy_manager.login_part.ActivityLogIn" />
        <activity android:name="com.example.economy_manager.main_part.view.activity.ActivityMainScreen" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>


    </application>

</manifest>